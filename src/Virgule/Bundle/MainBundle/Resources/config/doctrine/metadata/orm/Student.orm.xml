<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Student" table="student">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="registrationDate" type="datetime" column="registration_date" nullable="false"/>
    <field name="lastname" type="string" column="lastname" length="50" nullable="false"/>
    <field name="firstname" type="string" column="firstname" length="50" nullable="false"/>
    <field name="birthdate" type="date" column="birthdate" nullable="true"/>
    <field name="phoneNumber" type="string" column="phone_number" length="10" nullable="true"/>
    <field name="cellphoneNumber" type="string" column="cellphone_number" length="10" nullable="true"/>
    <field name="address" type="string" column="address" length="50" nullable="true"/>
    <field name="zipcode" type="string" column="zipcode" length="10" nullable="true"/>
    <field name="city" type="string" column="city" length="50" nullable="true"/>
    <field name="gender" type="string" column="gender" length="1" nullable="true"/>
    <field name="nationality" type="string" column="nationality" length="50" nullable="true"/>
    <field name="maritalStatus" type="string" column="marital_status" length="20" nullable="true"/>
    <field name="commentaires" type="text" column="commentaires" nullable="true"/>
    <field name="registringDate" type="date" column="registring_date" nullable="false"/>
    <field name="picturePath" type="string" column="picture_path" length="50" nullable="true"/>
    <field name="arrivalDate" type="date" column="arrival_date" nullable="true"/>
    <field name="scholarized" type="boolean" column="scholarized" nullable="true"/>
    <field name="profession" type="string" column="profession" length="45" nullable="true"/>
    <field name="scholarizedInTheCountry" type="boolean" column="scholarized_in_the_country" nullable="true"/>
    <field name="scholarizedInAForeignCountry" type="boolean" column="scholarized_in_a foreign_country" nullable="true"/>
    <field name="scholarizationLevel" type="boolean" column="scholarization_level" nullable="true"/>
    <field name="emergencyContactLastname" type="string" column="emergency_contact_lastname" length="45" nullable="true"/>
    <field name="emergencyContactFirstname" type="string" column="emergency_contact_firstname" length="45" nullable="true"/>
    <field name="emergencyContactPhoneNumber" type="string" column="emergency_contact_phone_number" length="45" nullable="true"/>
    <field name="emergencyContactConnectionType" type="string" column="emergency_contact_connection_type" length="45" nullable="true"/>
    <many-to-one field="fkProposedLevel" target-entity="Level">
      <join-columns>
        <join-column name="fk_proposed_level_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="fkScholarizationLanguage" target-entity="Language">
      <join-columns>
        <join-column name="fk_scholarization_language_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="fkWelcomedByTeacher" target-entity="Teacher">
      <join-columns>
        <join-column name="fk_welcomed_by_teacher_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="fkNativeCountry" target-entity="Country">
      <join-columns>
        <join-column name="fk_native_country_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="fkMotherTongue" target-entity="Language">
      <join-columns>
        <join-column name="fk_mother_tongue_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
