<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Teacher" table="teacher">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
    <field name="lastName" type="string" column="last_name" length="50" nullable="false"/>
    <field name="firstName" type="string" column="first_name" length="50" nullable="false"/>
    <field name="phoneNumber" type="string" column="phone_number" length="10" nullable="true"/>
    <field name="cellphoneNumber" type="string" column="cellphone_number" length="10" nullable="true"/>
    <field name="emailAddress" type="string" column="email_address" length="50" nullable="true"/>
    <field name="username" type="string" column="username" length="50" nullable="false"/>
    <field name="password" type="string" column="password" length="50" nullable="false"/>
    <field name="registrationDate" type="datetime" column="registration_date" nullable="false"/>
    <field name="lastConnectionDate" type="datetime" column="last_connection_date" nullable="true"/>
    <field name="fkRoleId" type="integer" column="fk_role_id" nullable="false"/>
  </entity>
</doctrine-mapping>
