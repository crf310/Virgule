{% extends '::main_content.html.twig' %}
{% block content_title %}Ajouter un compte-rendu{% endblock %}
 {%block submenu %}{% endblock %}
{% block main_content %}
<form action="{{ path('classsession_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <!--
        <div class="alert alert-error alert-block">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading">Erreur dans la saisie</h4>
        {{ form_errors(form) }}
    </div>-->
    <div class="widget-box">
        <div class="widget-title">
                <span class="icon">
                        <i class="icon-align-justify"></i>									
                </span>
                <h5>Cours: {{ course }}</h5>
        </div>
        <div class="widget-content nopadding">
            {{ form_row(form.date, { 'label': 'Date'}) }}
            {{ form_row(form.sessionTeacher, { 'label': 'Formateur'}) }}
            {{ form_row(form.summary, { 'label': 'Résumé du cours' }) }}                
            {{ form_row(form.students, { 'label': 'Apprenants présents' }) }}
            {{ form_rest(form) }}
            <div class="form-actions">                                     
                <input class="btn" type="submit" value="Enregistrer le compte-rendu" />
            </div>
        </div>
    </div>        
</form>
{% endblock %}