{% include 'VirguleMainBundle:Comment:new.html.twig' with { target_route: target_route, 'target_id': target_id } %}
<div class="widget-content">        
    <ul class="recent-comments">
    {% if comments.count > 0 %}
        {% for comment in comments %}                        
            <li>
                <div class="comments">
                    <span class="user-info">{{ comment.teacher.firstName }}  {{ comment.teacher.lastName }} le  {{ comment.date|date("d/m/Y") }}</span>
                    <p>{{ comment.comment|raw }}</p>
                </div>
            </li>
        {% endfor %}
    {% else %}
        <div class="none-found">Aucun commentaire trouv√©</div>
    {% endif %}
    </ul>                              
    <a class="btn btn-default" id="add-comment"><i class="icon-comment"></i> Ajouter un commentaire</a>
</div>
