<div class="widget-content">        
    <ul class="recent-comments">
    {% if comments.count > 0 %}
        {% for comment in comments %}                        
            <li>
                <div class="comments">
                    <span class="user-info">{{ comment.teacher.firstName }}  {{ comment.teacher.lastName }} le  {{ comment.date|date("d/m/Y") }}</span>
                    <p>{{ comment.comment|raw }}</p>
                </div>
            </li>
        {% endfor %}
    {% else %}
        Aucun commentaire trouv√©.
    {% endif %}
    </ul>
</div>