<h1>Country list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Isocode</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('country_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.label }}</td>
            <td>{{ entity.isoCode }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('country_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

