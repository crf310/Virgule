    {% include 'VirguleMainBundle:Document:form_header.html.twig' with { 'existingTags': existingTags, 'documentTags': entity.tags } %}
{% endblock %}
{% block content_title %}Ajouter un document{% endblock %}
{%block submenu %}
    <a class="btn tip-bottom" href="{{ path('document_index') }}"> <i class="my-document-list"></i>Retour à la liste des documents</a>
