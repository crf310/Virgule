{% extends '::main_content.html.twig' %}
{% block head %}    
    {{ parent() }}
    {% block javascripts %}
     <script type='text/javascript'>
        function setRegistrationDate(date) {
            document.getElementById('registrationDateField').value = date;
        }
     </script>
    {% endblock %}
{% endblock %}
{% block content_title %}Enregistrer un nouvel apprenant{% endblock %}
 {%block submenu %}{% endblock %}
{% block main_content %}
<form action="{{ path('student_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <div class="widget-box">
        {% include 'VirguleMainBundle:Student:form.html.twig' with { 'form': form }  %}
        {{ form_rest(form) }}
        <div class="form-actions">                                     
            <input class="btn btn-success" type="submit" value="Enregistrer l'apprenant" /> 
            <input class="btn btn-success" type="submit" name="save_and_add_new" value="Enregistrer et ajouter un autre" />
        </div>
    </div>
</div>
</form>
{% endblock %}