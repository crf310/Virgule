<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">  
    <head>
        {% include '::head.html.twig' %}
        <title>Alphabétisation - Croix-Rouge Française</title>
        <style type="text/css" title="currentStyle" media="screen">
            body { background-color: #F5F5F5; }
            #apple img {
                border: 10px #CCCCCC solid;
                margin-top: 5px;
            }
        </style>
    </head>
    <body class="login" onload="document.getElementById('username').focus();">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2"></div>
                <div class="span8">
                    <img src="{{ asset('img/croixrouge.png') }}" alt="Croix-Rouge française" />
                </div>            
                <div class="span2"></div>
            </div>
            <div class="row-fluid">
                <div class="span2"></div>
                <div id="apple" class="span4">
                        <img src="{{ asset('img/pomme.jpg') }}" />
                </div>
                <div id="form_div" class="span4">
                    <div class="widget-box">
                        <div class="widget-title">
                                <h5>Service alphabétisation de la Croix-Rouge Française</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form id="form_login" action="{{ path('login_check') }}" method="post" class="form-horizontal">
                                {% if error %}
                                    <div class="alert alert-error alert-block">
                                        <a class="close" data-dismiss="alert" href="#">×</a>
                                        <h4 class="alert-heading">Erreur !</h4>
                                        {{ error.message }}
                                    </div>
                                {% endif %}	
                                <div class="control-group">
                                    <label class="control-label" for="delegation">Délégation :</label>
                                    <div class="controls">                                            
                                        <select name="organization_branch_id">
                                            {% for organization_branch in organization_branches %}
                                            <option value="{{ organization_branch.id }}">{{ organization_branch.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Nom d'utilisateur :</label>
                                    <div class="controls">
                                        <input class="textInput" type="text" id="username" name="_username" value="{{ last_username }}" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Mot de passe</label>
                                    <div class="controls">    
                                        <input type="password" id="password" name="_password" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label for="remember_me" class="control-label">Garder ma session active</label>
                                    <div class="controls">    
                                        <input type="checkbox" id="remember_me" name="_remember_me" />
                                    </div>
                                </div>                                 
                                <div class="form-actions">                                        
                                    <input type="hidden" name="_target_path" value="/welcome" />
                                    <input class="btn" type="submit" name="truc" value="Connexion" />
                                </div>
                            </form>
                        </div>	
                    </div>
                </div>
                <div class="span2"></div>
            </div>
        </div>
    </body>
</html>