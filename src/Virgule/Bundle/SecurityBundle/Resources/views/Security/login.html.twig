<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        {% include '::head.html.twig' %}
        <title>Alphabétisation - Croix-Rouge Française</title>
        <style type="text/css" title="currentStyle" media="screen">          
            body {
                padding-top: 40px;
                padding-bottom: 40px;
                background-color: #f5f5f5;
            }
            .container { max-width: 851px; }
            #main-container.container {  
                margin-top: 5px;
                max-width: 851px;
                background-image: url({{ asset('img/apple.jpg') }});
                height: 564px;
                border: 2px solid #e5e5e5;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);  
            }

            .form-signin {
                max-width: 300px;
                padding: 9px 19px 19px 29px;
                margin: 120px auto 150px;
                background-color: #fff;
                opacity: 0.92;
                border: 1px solid #e5e5e5;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
            }
            .form-signin .checkbox, 
            .form-signin .select {
                margin-bottom: 10px;
                padding-left: 0px;
            }
            label { padding-left: 10px; display:inline-block }
        </style>
    </head>
    <body class="login" onload="document.getElementById('username').focus();">
        <div class="container">
            <img src="{{ asset('img/croixrouge.png') }}" alt="Croix-Rouge française" />
        </div>
        <div class="container" id="main-container">
            <form class="form-signin" action="{{ path('login_check') }}" method="post">                
                <input type="hidden" name="_target_path" value="/welcome" />
                <h2 class="form-signin-heading">Service alphabétisation</h2>
                <select name="organization_branch_id" class="select">
                    {% for organization_branch in organization_branches %}
                    <option value="{{ organization_branch.id }}">{{ organization_branch.name }}</option>
                    {% endfor %}
                </select>
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span>
                    <input class="textInput" type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Nom d'utilisateur" />
                </div>              
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span>
                    <input type="password" id="password" name="_password"  placeholder="Mot de passe" />
                </div>
                <input class="btn btn-primary" type="submit" name="truc" value="Connexion" />
                <label class="checkbox">                    
                    <input type="checkbox" id="remember_me" name="_remember_me" />Se rappeler de moi
                </label>
                <br />
                <a href="#">Mot de passe perdu</a>
            </form>
        </div>
    </body>
</html>

