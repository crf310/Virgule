<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
    <head>
        <link rel="shortcut icon" href="/croixrouge/web/images/favicon.ico" />
        <link href="{{ asset('css/uni-form.css') }}" media="screen" rel="stylesheet"/>
        <link href="{{ asset('css/default.uni-form.css') }}" id="formStyle" title="Default Style" media="screen" rel="stylesheet"/>
    <script src="{{ asset('jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('jquery.uniform.js') }}" type="text/javascript"></script>
        <link rel="stylesheet" href="{{ asset('css/uniform.default.css') }}" type="text/css" media="screen" charset="utf-8" />
        <link href="{{ asset('css/login.css') }}" media="screen" rel="stylesheet"/>
        <script type="text/javascript">
           $(function()
            $("button input").uniform();
           });
         </script>
    </head>
    <body class="login" onload="document.getElementById('username').focus();">
        <div id="global">
            <img src="{{ asset('images/croixrouge.png') }}" alt="Croix-rouge française" />
            <div id="pomme">
                <img src="{{ asset('images/pomme.jpg') }}" alt="" />
                Délégation locale de Paris III et X - Service d'alphabétisation
            </div>
            <div id="form_login">
                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}
                <form id="form_login" action="{{ path('login_check') }}" method="post" class="uniForm">
                    <fieldset class="inlineLabels">
                        <div class="ctrlHolder">
                            <label for="delegation">Délégation :</label>
                            <select name="organization_branch_id">
                                {% for organization_branch in organization_branches %}
                                <option value="{{ organization_branch.id }}">{{ organization_branch.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="ctrlHolder">
                            <label for="username">Nom d'utilisateur :</label>
                            <input class="textInput" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="ctrlHolder">
                            <label for="password">Mot de passe :</label>
                            <input class="textInput" type="password" id="password" name="_password" />
                        </div>
                        <div class="controls">
                            <input type="hidden" name="_target_path" value="/welcome" />
                            <input class="btn" type="submit" name="truc" value="Connexion" />
                      </div>
                     </fieldset>
                </form>
            </div>
        </div>
    </body>
</html>